{% extends '::base.html.twig' %}

{% block body -%}
    


{% for entity in entities %}
 <div class="blog-post">
            <h2 class="blog-post-title">
            <a href="{{ path('_show', { 'id': entity.id }) }}">


            {{ entity.title }}
            </h2>
            </a>
            <p class="blog-post-meta">{{ entity.created|date('d.m.Y') }}
            {% if entity.published %}

                <span class="glyphicon glyphicon-ok"></span>
            {% else %}
            <span class="glyphicon glyphicon-remove"></span>
            {% endif %}


            <a href="{{ path('_edit', { 'id': entity.id }) }}">Update Post</a>

            {# by <a href="#">Mark</a> #}</p>

            <p>{{ entity.description }}</p>

            <hr>


          {% endfor %}
          </div><!-- /.blog-post -->
                    <nav>
            <ul class="pager">
              <li><a href="#">Previous</a></li>
              <li><a href="#">Next</a></li>
            </ul>
          </nav>
       


        <ul>
        <li>
            <a href="{{ path('_new') }}">
                Create new post
            </a>
        </li>
    </ul>
    {% endblock %}